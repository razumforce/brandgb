<section class="register-main">
 
  <div>
    <div class="register-main__title">
      <span>New User Registration</span>
    </div>
    <div class="register-main__div">
      <form action="">
        <h3>Enter registration information</h3>
        <p class="checkout-steps__p-light">Provide your email, choose login and password</p>
        <label for="email">EMAIL ADDRESS</label><span>*</span><br>
        <input type="email" name="emailr" id="register-email" required><br>
        <label for="login">LOGIN</label><span>*</span><br>
        <input type="text" name="loginr" id="register-login" required><br>
        <label for="password">PASSWORD</label><span>*</span><br>
        <input type="password" name="passwordr" id="register-password" required><br>
        <label for="password2">REPEAT PASSWORD</label><span>*</span><br>
        <input type="password" name="password2r" id="register-password2" required><br>
        <p class="checkout-steps__p-red">*Required Fields</p>
        <button type="button" value="" onclick="registerUser()">REGISTER</button>
      </form>
    </div>
  </div>

</section>

